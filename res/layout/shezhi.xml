<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
            android:background="#f4f4f4"
  >
    
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/loginbut"
        android:id="@+id/biaoti"
        
        >  <TextView
        android:id="@+id/tv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#bbbbbb"
       android:drawableLeft="@drawable/goback"
               android:layout_gravity="center"
              android:padding="5dp"
       
      />
         <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_margin="2dp"
        android:text="设置界面"
        android:textSize="20sp"
        android:layout_gravity="center"
      android:gravity="center"
      android:layout_weight="1"
      />
        
   
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#bbbbbb"
       android:drawableLeft="@drawable/goback"
               android:layout_gravity="center"
              android:padding="5dp"
       android:visibility="invisible"
      />
    
    </LinearLayout>
    
    
    
     <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" 
            >

            <ImageView
                android:id="@+id/im_mehead"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:src="@drawable/a272" 
                android:clickable="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                
                />
 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                
                    android:singleLine="true"
                    android:text="姓名"
                    android:textColor="#000000"
                    android:layout_gravity="center"
                    android:textSize="18sp" 
                    android:id="@+id/tv_memmm"/>
 <ImageView 
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:src="@drawable/boy"
     android:layout_gravity="center"
     android:id="@+id/im_sex"
     
     
     />
 
   </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                >

               

                <TextView
                    android:id="@+id/te_meperson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:maxLines="3"
                    android:text="个性签名"
                    android:textColor="#bbbbbb"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                   />
              
          </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:padding="5dp"
                android:background="#ffffff"
                                    android:id="@+id/xiugai"
                >

               

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="修改资料"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_weight="1"
                   />
                 <ImageView 
                    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:src="@drawable/guanyu"
                    android:layout_gravity="center"
                    />
          </LinearLayout>
            <LinearLayout
                                    android:id="@+id/im_xiaoxi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"  
                android:padding="5dp" 
                android:background="#ffffff"
                android:layout_marginTop="5dp">

               

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="消息设置"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:id="@+id/xiaoxi"
                    android:layout_weight="1"
                   />
                <ImageView 
                    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:src="@drawable/guanyu"
                   android:layout_gravity="center" 
                    />
          </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"  
                android:padding="5dp"
                android:background="#ffffff" 
                android:layout_marginTop="5dp"
                                    android:id="@+id/change"
                >

               

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="更换账号"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_weight="1"
                  
                   />
                        <ImageView 
                    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:src="@drawable/guanyu"
                    android:layout_gravity="center"
                    />
          </LinearLayout>
        
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"  
                android:padding="5dp"
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                >

               

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="接收消息"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_weight="1"
                   />
                      <ImageView 
                    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:src="@drawable/guan"
                    android:layout_gravity="center"
                    android:id="@+id/editapp"
                    />
                      
                      
                      
                      
          </LinearLayout>
          
    

</LinearLayout>