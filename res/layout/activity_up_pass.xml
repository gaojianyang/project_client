<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpPassActivity"
    android:orientation="vertical" 
    android:background="#f4f4f4"
   >
       
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/biaoti"
        android:background="#63b8ff"
        
        >
       <TextView
   android:id="@+id/tv_passback"        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbut"
   
       android:drawableLeft="@drawable/goback"
      android:gravity="center"
      android:padding="5dp"
      />
    
    
       <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
   android:text="修改密码"
   android:textColor="#ffffff"
   android:textSize="20sp"
      android:padding="5dp"
      android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
      
      />
       <TextView 
           
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="有"
             android:textColor="#ffffff"
   android:textSize="20sp"
      android:padding="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="invisible"
           />
    
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="5dp"
        android:padding="5dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原始密码"
             android:textSize="20sp"
           android:textColor="#565656"
          
            />
        <EditText 
        android:id="@+id/et_yuanshi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/wubian"
        android:digits="1234567890qwertyuiopasdfghjklmnbvcxz"
        android:ems="12"
        android:inputType="textPassword"
        android:maxLength="15"
        android:singleLine="true"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textColorHint="#bbbbbb"
        android:textStyle="italic" />
      
    </LinearLayout>
    
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="5dp"
        android:padding="5dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
             android:textSize="20sp"
           android:textColor="#565656"
          
            />
        <EditText 
        android:id="@+id/et_xiugai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/wubian"
        android:digits="1234567890qwertyuiopasdfghjklmnbvcxz"
        android:ems="12"
        android:inputType="textPassword"
        android:maxLength="15"
        android:textSize="20sp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#bbbbbb"
        />
      
    </LinearLayout> 
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="5dp"
        android:padding="5dp"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码"
             android:textSize="20sp"
           android:textColor="#565656"
          
            />
        <EditText 
        android:id="@+id/et_queren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/wubian"
        android:digits="1234567890qwertyuiopasdfghjklmnbvcxz"
        android:ems="12"
        android:textSize="20sp"
        android:inputType="textPassword"
        android:maxLength="15"
        android:singleLine="true"
        android:textColor="#6495ed"
        android:textColorHint="#6495ed"
        android:textStyle="italic" />
      
    </LinearLayout>

     
      <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:gravity="center"
       >
  
        
         <TextView 
        
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:id="@+id/tv_passjiao"
        android:text="提交"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_margin="25dp"
        android:background="@drawable/loginbut"
        android:clickable="true"
        android:padding="8dp"
      /> 
     
        </LinearLayout>
</LinearLayout>