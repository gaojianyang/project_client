<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#7fffffff" >
    
    
    <LinearLayout 
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
      <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/im_spohead"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/a172"
        android:layout_gravity="center"
        
       />
    <LinearLayout 
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_weight="1"
          android:padding="5dp"
        > 
         
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/spo_name"
      android:textSize="13sp"
      android:textColor="#ff000000"
      android:clickable="true"
      android:text="夕日"
      android:layout_margin="3dp"
       />
         <LinearLayout 
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_margin="3dp"
        > 
        
            <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
         android:textColor="#bbbbbb"
         android:layout_gravity="center"
         android:textSize="15sp"
         android:text="活动时间："
        
        />
            <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/spo_time"
         android:textColor="#bbbbbb"
         android:layout_gravity="center"
         android:textSize="15sp"
         android:text="2009-9-13"
        
        />
    </LinearLayout>
     
       
       
    
    </LinearLayout>
       <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#6495ed"
            android:id="@+id/zhiding"
             android:layout_gravity="center"
             android:textSize="15sp"
            
            />
       
   </LinearLayout>
   
       
      <LinearLayout 
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:orientation="horizontal"
                    android:layout_margin="5dp"
          
        > 
          <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
         android:textColor="#565656"
         android:layout_gravity="center"
         android:textSize="20sp"
         android:text="主题"
        
        />
          <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spo_title"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="一起去打篮球吧我卡到三点多 地方到"
        android:layout_marginLeft="20dp"
       /></LinearLayout>
            <LinearLayout 
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:orientation="horizontal"
                                      android:layout_margin="5dp"

          
        > 
          <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
         android:textColor="#565656"
         android:layout_gravity="center"
         android:textSize="20sp"
         android:text="内容"
        
        />
          <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spo_content"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="高手来 "
                android:layout_marginLeft="20dp"
        
       />
            </LinearLayout>
        
       <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
                                      android:layout_margin="5dp"

        >
          
         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:clickable="true"
            android:textColor="#565656"
            android:text="@string/ren"
             android:layout_gravity="center"
             android:textSize="20sp"
            
            />
        
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/spo_person"
            android:gravity="center"
            android:textColor="#f0732b"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="3"
            android:layout_marginLeft="20dp"
            
            />
           
         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:text=" 人"
             android:layout_gravity="center"
             android:textSize="20sp"
             android:layout_marginLeft="20dp"
            
            />
        
    </LinearLayout>  
     
    

</LinearLayout>