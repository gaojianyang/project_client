<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5fff5" 
    android:orientation="vertical"
  >
  
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/biaoti"
        android:background="#63b8ff"
        
        >
       <TextView
        android:id="@+id/j"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbut"
   
       android:drawableLeft="@drawable/goback"
      android:gravity="center"
      android:padding="5dp"
      />
    
    
       <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
   android:text="注册界面"
   android:textColor="#ffffff"
   android:textSize="20sp"
      android:gravity="center"
      android:padding="5dp"
      android:layout_weight="1"
            android:layout_gravity="center"
      
      />
       <TextView 
           
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="有"
             android:textColor="#ffffff"
   android:textSize="20sp"
      android:gravity="center"
      android:padding="5dp"
            android:layout_gravity="center"
            android:visibility="invisible"
           />
    
    </LinearLayout>
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    >
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        
        >
        
     
    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/imageView1"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:scaleType="fitXY"
        android:src="@drawable/a172" />
       <TextView
        android:id="@+id/tv_choicehead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"     
        android:text="更换"
        android:textColor="#bbbbbb"
        android:background="@drawable/button"
        android:textSize="15sp" />
      </LinearLayout>    
      
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        
        >
      
        
        <EditText
        android:id="@+id/b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/wubian"
        android:ems="10"
        android:hint="昵称"
        android:maxLength="16"
                android:textSize="25sp"
        
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#bbbbbb"
      />

    <EditText
        android:id="@+id/c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@drawable/wubian"
        android:digits="1234567890qwertyuiopasdfghjklmnbvcxz"
        android:hint="密码"
        android:inputType="textPassword"
        android:maxLength="15"
        android:textSize="25sp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textColorHint="#bbbbbb"
        >

    </EditText>
    <ProgressBar 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:id="@+id/reg_pro"
        />
        
        
    </LinearLayout>
</LinearLayout>

    
 
 
    <LinearLayout
        android:id="@+id/ce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_margin="3dp">
<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
             android:text="性别" 
            
          android:textColor="#565656"
          android:layout_marginRight="5dp" />

        <RadioGroup
            android:id="@+id/aaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" 
            android:background="#ffffff">

            <RadioButton
                android:id="@+id/d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:checked="true"
                android:text="男"
                android:textColor="#000000" />

            <RadioButton
                android:id="@+id/e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="女"
                android:textColor="#000000" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bbb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal" >

      
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
             android:text="学校" 
            
          android:textColor="#565656"
          android:layout_marginRight="5dp" />

        <Spinner
            android:id="@+id/f"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/wubian" />
    </LinearLayout>
     <LinearLayout
        android:id="@+id/eee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
             android:text="家乡" 
            
          android:textColor="#565656"
          android:layout_marginRight="5dp" />

        <EditText
            android:id="@+id/hhome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wubian"
            android:hint="输入你的家乡吧"
          android:lines="2"
android:layout_gravity="center"     
            android:textSize="20sp"
       android:maxLength="40"
            android:textColor="#000000"
            android:textColorHint="#bbbbbb" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ccc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
          android:text="签名" 
          android:textSize="20sp"
          android:textColor="#565656"
          android:layout_marginRight="5dp"/>

        <EditText
            android:id="@+id/h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wubian"
            android:hint="输入你的个性签名吧"
            android:lines="2"
            android:textSize="20sp"
            android:maxLength="126"
            android:textColor="#000000"
            android:textColorHint="#bbbbbb" />
    </LinearLayout>


      
        
    <TextView
        android:id="@+id/g"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbut"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="25dp"
        android:gravity="center"
                
        android:padding="8dp"
       />
   

    

    
    
    

</LinearLayout>