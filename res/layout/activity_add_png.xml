<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPngActivity" 
    android:orientation="vertical">
   <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/biaoti"
        android:background="#63b8ff"
        
        >
       <TextView
   android:id="@+id/tv_back"        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbut"
   
       android:drawableLeft="@drawable/goback"
      android:gravity="center"
      android:padding="5dp"
      />
    
    
       <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
   android:text="图片"
   android:textColor="#ffffff"
   android:textSize="20sp"
      android:gravity="center"
      android:padding="5dp"
      android:layout_weight="1"
            android:layout_gravity="center"
      
      />
       <TextView 
           
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="有"
             android:textColor="#ffffff"
   android:textSize="20sp"
      android:gravity="center"
      android:padding="5dp"
            android:layout_gravity="center"
            android:visibility="invisible"
           />
    
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="拍照上传" 
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="@drawable/loginbut"
        android:id="@+id/add_bendi"
        android:padding="5dp"/>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="相册获取"
        android:textSize="20sp"
                android:layout_marginTop="10dp"
         android:padding="5dp"
        android:layout_gravity="center"
 android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"         android:textColor="#ffffff"
         android:gravity="center"
          android:background="@drawable/loginbut"
          android:id="@+id/add_paizhao"/>
    <EditText 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_title"
        android:singleLine="true"
        android:hint="给图片起个标题吧~"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:maxLength="100"
        android:textSize="20sp"
        android:textColor="#565656"
        android:visibility="invisible"
        />
    
    
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="确定上传" 
        android:layout_gravity="center"
        android:layout_margin="20dp"
         android:padding="5dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="@drawable/loginbut"
        android:visibility="invisible"
        android:id="@+id/add_sure"
        android:clickable="false"/>
        <ScrollView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:scrollbars="none" >
       
            <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/image"
       /></ScrollView>
  

</LinearLayout>