<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#f5f5f5">
    
        
    
 <LinearLayout 
        android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="5dp"
        >
           <ImageView 
        android:layout_height="72dp"
        android:layout_width="72dp"
        android:src="@drawable/a172"
        android:scaleType="fitXY"
        android:layout_margin="5dp"
        android:id="@+id/im_mehead"
        android:layout_gravity="center"
       />
       
            <LinearLayout 
        android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    
        >       <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
       android:text="姓名"
       android:textSize="20sp"
       android:singleLine="true"
       android:textColor="#79d7ee"
       android:id="@+id/tv_name3"
       android:layout_gravity="center"
                   android:layout_margin="2dp"
       
       />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_gender"
            android:layout_gravity="center"
            android:src="@drawable/boy"
            android:layout_margin="2dp"
            />
        
          
    </LinearLayout>
    
           
    </LinearLayout>
       <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:background="#ffffff"
       >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="学校"
            android:textSize="18sp"
           android:textColor="#565656"
           android:gravity="center"
           android:layout_marginLeft="10dp"
           />
          <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工业大学"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="18sp"
           android:textColor="#000000"
           android:gravity="center"
           android:id="@+id/tv_school"
           android:layout_marginLeft="60dp"
           />
        
        
    </LinearLayout>
     <LinearLayout 
                 android:padding="5dp"
         
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:background="#ffffff"
       >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家乡"
            android:textSize="18sp"
           android:textColor="#565656"
           android:gravity="center"
                      android:layout_marginLeft="10dp"
           
           />
          <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扬州"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="18sp"
           android:textColor="#000000"
           android:gravity="center"
                      android:layout_marginLeft="60dp"
           
           android:id="@+id/tv_level"
           />
        
        
    </LinearLayout>
    
      <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
                android:background="#ffffff"
        
       >
       
          <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签名"
            android:textSize="18sp"
           android:textColor="#565656"
           android:gravity="center"
                      android:layout_marginLeft="10dp"
           
           />
        
           <TextView 
               android:layout_height="wrap_content"
               android:layout_width="match_parent"
               android:text="的飞洒地方"
              android:textSize="18sp" 
              android:maxLines="4"
              android:textColor="#000000"
                         android:layout_marginLeft="60dp"
              
            android:id="@+id/tv_person"
               />
        
    </LinearLayout>
    
   
    
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:background="#ffffff"
        android:padding="5dp"
       >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="粉丝"
            android:textSize="18sp"
           android:textColor="#565656"
           android:gravity="center"
                      android:layout_marginLeft="10dp"
           
           />
          <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="125"
            android:textSize="18sp"
           android:textColor="#000000"
           android:gravity="center"
           android:id="@+id/tv_fans"
            android:layout_marginLeft="60dp"
           
           />
       
    
    </LinearLayout>
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:padding="5dp"
       >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加入的社团"
            android:textSize="18sp"
           android:textColor="#565656"
           android:gravity="center"           android:layout_marginLeft="10dp"
           
           />
          <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击查看"
            android:textSize="18sp"
           android:textColor="#7f000000"
           android:gravity="center"
           android:id="@+id/tv_seeclub"
                      android:layout_marginLeft="40dp"
                                android:textStyle="italic"
           
                      android:background="@drawable/button"
                      android:clickable="true"
           
           />
        
        
    </LinearLayout>
       <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:padding="5dp"
       >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="参加的活动"
            android:textSize="18sp"
           android:textColor="#565656"
           android:gravity="center"
                      android:layout_marginLeft="10dp"
           
           />
          <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击查看"
            android:textSize="18sp"
           android:textColor="#7f000000"
           android:gravity="center"
           android:id="@+id/tv_seespo"
                      android:background="@drawable/button"
                      android:clickable="true"
                                 android:layout_marginLeft="40dp"
                                           android:textStyle="italic"
                      
           
           />
        
        
    </LinearLayout>
    
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:padding="5dp"
       >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发过的帖子"
            android:textSize="18sp"
           android:textColor="#565656"
           android:gravity="center"           android:layout_marginLeft="10dp"
           
           />
          <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击查看"
            android:textSize="18sp"
           android:textColor="#7f000000"
           android:gravity="center"
           android:id="@+id/tv_seeinv"
           android:background="@drawable/button"
          android:clickable="true"
                     android:layout_marginLeft="40dp"
                     android:textStyle="italic"
          
           
          
           />
        
        
    </LinearLayout>
      <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="#ffffff"
        android:gravity="center"
       >
    <TextView 
        
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/tv_send"
        android:drawableLeft="@drawable/me06"
        android:text="发消息"
         android:textSize="20sp"
           android:textColor="#79d7ee"
           android:gravity="center"
         android:layout_margin="5dp"
        android:background="@drawable/button"
       android:clickable="true"
      /> 
        
    
         <TextView 
        
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/tv_guanzhu"
        android:drawableLeft="@drawable/zan03"
        android:text="关注Ta"
         android:textSize="20sp"
           android:textColor="#79d7ee"
           android:gravity="center"
         android:layout_margin="5dp"
        android:background="@drawable/button"
       android:clickable="true"
      /> 
        
          <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/tv_out"
        android:drawableLeft="@drawable/zan03"
        android:text="踢出"
         android:textSize="20sp"
           android:textColor="#79d7ee"
           android:gravity="center"
         android:layout_margin="5dp"
        android:background="@drawable/button"
       android:visibility="gone"
      /> 
        </LinearLayout>
   
</LinearLayout>