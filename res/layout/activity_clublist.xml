<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ClublistActivity"
     android:background="#ffffff" >
  
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="#63b8ff"
         android:id="@+id/biaoti"
       >
       
         <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:drawableLeft="@drawable/goback"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:background="@drawable/loginbut"
      android:gravity="center"
      android:id="@+id/tv_back"
        android:padding="5dp"
      /> 
        <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:src="@drawable/huif"
        android:padding="5dp"
        android:layout_gravity="center"
        android:background="@drawable/loginbut"
       android:visibility="invisible" />
         <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:textSize="20sp"
        android:layout_gravity="center"
      android:gravity="center"
      android:text="社团"
       android:id="@+id/userinfo"
      android:textColor="#ffffff"
        android:padding="5dp"
    
      /> 
      
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:src="@drawable/huif"
        android:padding="5dp"
        android:id="@+id/huifu"
        android:layout_gravity="center"
        android:background="@drawable/loginbut"
        />

    <ImageView
        android:id="@+id/im_ada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbut"
        android:padding="5dp"
        android:src="@drawable/addd" />
    
    </LinearLayout> 
   
  
     <ProgressBar 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/inv_pro"
        />

    
   <ListView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/lv_clubre"
       android:layout_weight="1"
       android:dividerHeight="2dp"
       android:divider="#f4f4f4"
       android:layout_marginLeft="5dp"
       android:layout_marginRight="5dp"
      
       ></ListView>
    <include layout="@layout/pagebottom"
       android:id="@+id/a"
       
      />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
               android:id="@+id/b"
         android:visibility="gone"
        ><include
       layout="@layout/replyedit"
      /></LinearLayout>
   

</LinearLayout>