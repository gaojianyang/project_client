<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   
    >
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
           android:background="#63b8ff"
           android:id="@+id/biaoti"
         >
       
         <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
android:padding="5dp"        android:src="@drawable/emow"
        android:layout_gravity="center"
      android:gravity="center"
      android:id="@+id/uuse"
      android:background="@drawable/loginbut"
      /> 
         <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="20sp"
        android:layout_gravity="center"
      android:gravity="center"
      android:text="校园"
      android:textColor="#ffffff"
      /> 
 
        
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/xie1"
        android:id="@+id/im_ada"
android:padding="5dp"        android:layout_gravity="center"
                android:background="@drawable/loginbut"
        
        />
    
    
    </LinearLayout>
    


<FrameLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
    
    
    

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >
            <LinearLayout
                    android:id="@+id/channel1"
                    style="@style/main_tab_but_linear" 
                  android:padding="5dp"    android:background="#f4f4f4">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/mmb" />
               
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/channel2"
               android:padding="5dp"       style="@style/main_tab_but_linear"
                    android:background="#f4f4f4" 
                   >

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/fhhb" />

                   
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/channel3"
                    style="@style/main_tab_but_linear"
                   
                    android:background="#f4f4f4"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/xb" />

                   
                </LinearLayout>
            </LinearLayout>
    </RelativeLayout>

</FrameLayout>
</LinearLayout>
